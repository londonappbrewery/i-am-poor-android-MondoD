<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2bec3"
    tools:context="com.londonappbrewery.iampoor.MainActivity">


    <ImageView
        android:id="@+id/img_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/txt_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="106dp"
        android:text="@string/i_am"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_poor"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_toEndOf="@+id/txt_i_am"
        android:layout_toRightOf="@+id/txt_i_am"
        android:text="@string/poor"
        android:textSize="50sp"
        android:textStyle="bold|italic" />


</RelativeLayout>
